<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>myWeb</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>company</param-name>
		<param-value>KG</param-value>
	</context-param>
	<context-param>
		<param-name>manager</param-name>
		<param-value>Tommy. Lee</param-value>
	</context-param>
	<error-page>
		<error-code>404</error-code>
		<location>/error/error404.jsp</location>
	</error-page>
	<!-- <error-page> <error-code>500</error-code> <location>/error/error500.jsp</location> 
		</error-page> -->
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/error/errorNullPointer.jsp</location>
	</error-page>
	<!-- @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@servlet@@@@@@@@@@@@@@@@@@@@@@@@@@@ -->
	<servlet>
		<servlet-name>MyOne</servlet-name>
		<servlet-class>sample.MyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyOne</servlet-name>
		<url-pattern>/test.hoyeon</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LifeCycle</servlet-name>
		<servlet-class>sample.LifeCycle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LifeCycle</servlet-name>
		<url-pattern>/LifeCycle</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>InitParam</servlet-name>
		<servlet-class>sample.InitParam</servlet-class>
		<init-param>
			<param-name>tel</param-name>
			<param-value>010-9531-0114</param-value>
		</init-param>
		<init-param>
			<param-name>email</param-name>
			<param-value>stdio@hanmail.net</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>InitParam</servlet-name>
		<url-pattern>/InitParam</url-pattern>
	</servlet-mapping>
</web-app>